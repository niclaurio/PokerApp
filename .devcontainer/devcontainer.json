{
    "name": "PokerAppDevContainer",
    "dockerComposeFile": "./docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/home/pokerApp/development/PokerApp",
    "remoteEnv": {
      "DEBIAN_FRONTEND": "dialog" // terminal prompt enabled
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "matangover.mypy",
          "charliermarsh.ruff",
          "ms-vscode.makefile-tools",
          "eamodio.gitlens",      // GitLens (advanced Git support)
          "github.vscode-pull-request-github", // GitHub extension
          "ms-vscode.vscode-github-actions", // GitHub Actions support (optional)
          "mhutchie.git-graph"    // Git Graph (optional for visualization)
        ],
        "settings": {
          "editor.formatOnSave": true,
          "python.formatting.provider": "black",
          "python.linting.mypyEnabled": true,
          "python.linting.enabled": true,
          "python.linting.ruffEnabled": true
        }
      }
    }
  }
  