{
    "name": "PokerAppDevContainer",
    "dockerComposeFile": "./docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/home/pokerApp/development/PokerApp",
    "remoteEnv": {
      "DEBIAN_FRONTEND": "noninteractive" // terminal prompt enabled
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "matangover.mypy",
          "charliermarsh.ruff",
          "ms-vscode.makefile-tools"
        ],
        "settings": {
          "editor.formatOnSave": true,
          "python.formatting.provider": "black",
          "python.linting.mypyEnabled": true,
          "python.linting.enabled": true,
          "python.linting.ruffEnabled": true
        }
      }
    }
  }
  